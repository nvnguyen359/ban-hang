{
  "name": "AD",
  "version": "1.0.6",
  "description": "My test electron app",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "nodemon --exec electron .",
    "start": "electron .",
    "deploy": "electron-builder",
    "build": "electron-builder"
  },
  "repository": "https://github.com/nvnguyen359/ban-hang",
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "build": {
    "appId": "com.nguyen.autoupdater",
    "artifactName": "${name}-${version}.${ext}",
    "win": {
      "target": "nsis"
    },
    "directories": {
      "output": "dist"
    },
    "asar": false,
    "extraFiles": [
      {
        "from": "./.env",
        "to":"./.env"
      }
    ]
  },
  "author": "Nguyen",
  "license": "ISC",
  "devDependencies": {
    "electron": "^27.0.4",
    "electron-builder": "^24.6.4",
    "nodemon": "^3.0.1"
  },
  "dependencies": {
    "@electron-forge/publisher-github": "^6.4.0",
    "body-parser": "^1.20.2",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "electron-pos-printer": "^1.3.6",
    "electron-print": "^1.0.2",
    "electron-updater": "^5.3.0",
    "express": "^4.18.2",
    "google-auth-library": "^9.2.0",
    "google-spreadsheet": "^4.1.1",
    "knex": "^3.0.1",
    "node-thermal-printer": "^4.4.1",
    "pdf-to-printer": "^5.6.0",
    "sqlite3": "^5.1.6",
    "uid": "^2.0.2",
    "update-electron-app": "^2.0.1"
  }
}
