{
  "name": "AD",
  "version": "0.2.5",
  "description": "Quản Lý Bán Hàng",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "nodemon --exec electron .",
    "start": "electron .",
    "deploy": "electron-builder",
    "build": "electron-builder",
    "serve": "nodemon ./server/server.js"
  },
  "repository": "https://github.com/nvnguyen359/ban-hang",
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "build": {
    "appId": "com.nvnguyen359.autoupdater",
    "artifactName": "${name}-${version}.${ext}",
    "win": {
      "target": "nsis"
    },
    "includeSubNodeModules": true,
    "nsis": {
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": false
    },
    "directories": {
      "output": "dist"
    },
    "asar": true,
    "extraFiles": [
      {
        "from": "./.env",
        "to": "./.env"
      },
      {
        "from": "./scratch",
        "to": "./scratch",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "author": "Nguyen",
  "license": "ISC",
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.6.3",
    "nodemon": "^3.0.1",
    "pdf-creator-node": "^2.3.5"
  },
  "dependencies": {
    "@electron-forge/publisher-github": "^6.4.1",
    "@electron/fuses": "^1.6.2",
    "body-parser": "^1.20.2",
    "chalk": "^5.3.0",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "electron-pos-printer": "^1.3.6",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-updater": "^5.3.0",
    "express": "^4.18.2",
    "google-auth-library": "^9.0.0",
    "google-spreadsheet": "^4.0.2",
    "html-pdf": "^3.0.1",
    "html-pdf-node": "^1.0.7",
    "html2pdf.js": "^0.10.1",
    "moment": "^2.29.4",
    "node-localstorage": "^3.0.5",
    "node-thermal-printer": "^4.2.1",
    "npm-run-all": "^4.1.5",
    "pdf-to-printer": "^5.6.0",
    "pdfkit": "^0.13.0",
    "save": "^2.9.0",
    "socket.io": "^4.7.2",
    "update-electron-app": "^2.0.1"
  }
}
