    "win": {
      "target": "nsis"
    },
    "directories": {
      "output": "dist"
    }
  },
  "author": "Nguyen",
  "license": "ISC",
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.6.3",
    "nodemon": "^3.0.1"
  },
  "dependencies": {
    "@electron-forge/publisher-github": "^6.4.0",
    "electron-updater": "^5.3.0",
    "update-electron-app": "^2.0.1"
  }
}
