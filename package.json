{
  "name": "AD",
  "version": "0.0.7",
  "description": "Phần Mềm Quản Lý Bán Hàng",
  "main": "app/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "nodemon --exec electron .",
    "client": "cd client && npm run start ",
    "client:build": "cd client && npm run build ",
    "server": "cd app && npm run start",
    "server:dist": "cd app && npm run start",
    "publish": "cd ./app/client && npm run build",
    "start:electron":"cd app && npm run start",
    "start": "concurrently \"npm run  client\"  &&  \" npm run server\"",
    "dist": "concurrently \"npm run  client:build\"  &&  \" npm run server:dist\""
  },
  "repository": "https://github.com/nvnguyen359/ban-hang",
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "build": {
    "appId": "com.nvnguyen359.autoupdater",
    "artifactName": "${name}-${version}.${ext}",
    "win": {
      "target": "nsis"
    },
    "directories": {
      "output": "dist"
    }
  },
  "author": "Nguyen",
  "license": "ISC",
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.6.3",
    "nodemon": "^3.0.1"
  },
  "dependencies": {
    "@electron-forge/publisher-github": "^7.0.0",
    "concurrently": "^8.2.1",
    "dotenv": "^16.3.1",
    "electron-pos-printer": "^1.3.6",
    "electron-updater": "^5.3.0",
    "google-auth-library": "^9.0.0",
    "google-spreadsheet": "^4.0.2",
    "moment": "^2.29.4",
    "node-thermal-printer": "^4.2.1",
    "update-electron-app": "^2.0.1"
  }
}
